<ul class="list-group">
<% @todos.each do |todo| %>	
	<li id="<%= todo[:id] %>" class="list-group-item">
		<h3><a href="/edit/<%= todo[:id] %>"><%= todo[:done] ? "<del>#{todo[:content]}</del>" : "#{todo[:content]}" %></a></h3>
		<span class="pull-right">
			<% if !todo[:done] %>
				<a href="/done/<%= todo[:id] %>" class="btn btn-default btn-done">Not done</a>
			<% else %>
				<a href="#" class="btn btn-default btn-done is-done">Done</a>
			<% end %>	
			<a href="/delete/<%= todo[:id] %>" class="btn btn-danger">Delete</a>
		</span>
	</li>
<% end %>	
</ul>
<div class="pagination-holder">
	<div id="pagination" class="pagination"></div>
</div>
<a href="/new" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add</a></div>
<script>
	$(function() {
		$('#pagination').pagination({
			items: <%= @total_record ? @total_record : 0 %>,
	    itemsOnPage: <%= @page_size %>,
	    displayedPages : 3,
	    cssStyle: '',
	    currentPage:<%= @page ? @page : 1 %>,
	    prevText: 'Previous',
	    nextText: 'Next',
	    hrefTextPrefix: '?page='
		});
	});	
</script>